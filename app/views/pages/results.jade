extends ../layout
block content
   .container.mt40
      .row
         .panel.panel-default
            .panel-heading
               h3 #{keyword}
            .panel-body
               if flowers && flowers.length > 0
                  each item in flowers
                     .col-md-2
                        .thumbnail
                           a(href="/flower/#{item._id}")
                              img(src="/upload/#{item.poster}",alt="#{item.title}")
                           .caption
                              h3 #{item.title}
                              p: a.btn.btn-primary(href="/flower/#{item._id}",role="button") 详情
         ul.pagination
            - for (var i=0;i<totalPage;i++){
               - if(currentPage == (i+1)){
                  li.active
                     span #{currentPage}
               - }else{
                  li
                     a(href='/results?#{query}&p=#{i}') #{i+1}
               - }
            - }