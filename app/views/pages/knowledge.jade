extends ../layout
block content
    img(src="/images/knowledge-bannerbg.jpg",align="center",width="100%",style="min-width:1170px")
    .container.mt100.pb100
        .row
            .col-md-3.fs18.text-center
                .navbar.navbar-success(role="navigation")
                    h3.bg-green.c-f.fs18 养护知识
                    ul.nav.navbar-nav
                        each item in knowledges
                            li.dropdown
                                a(href="##",data-toggle="dropdown",class="dropdown-toggle") #{item.name}
                                   span.caret
                                ul.dropdown-menu
                                    each tab in item.flowersName
                                       li: a.text-center.fs14(data-id="#{tab.id}",href="##{tab.id}") #{tab.title}
            .col-md-9.pl25
                h2.text-center 步步高发财树
                p.fs14.c-9.text-center 2015.11.11
                hr
                .news-content.fs18 #{newsContent1}
                .news-content.fs18 #{newsContent2}
                .news-content.fs18 #{newsContent3}
                .news-content.fs18 #{newsContent4}
                .news-content.fs18 #{newsContent5}
                .news-content.fs18 #{newsContent6}
                .news-content.fs18 #{newsContent7}
                .news-content.fs18 #{newsContent8}
                .news-content.fs18 #{newsContent9}
                hr
                .pb10
                    .pull-left
                        span 上一篇：&nbsp;&nbsp;
                        a(href="##") 微林上线啦
                    .pull-right
                        span 下一篇：&nbsp;&nbsp;
                        a(href="##") 微林上线啦