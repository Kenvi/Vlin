extends ../layout
block content
    img(src="/images/knowledge-bannerbg.jpg",align="center",width="100%",style="min-width:1170px")
    .container.mt100.pb100.min-h
        .row
            .col-md-3.fs18.text-center
                .navbar.navbar-success(role="navigation")
                    h3.bg-green.c-f.fs18 养护知识
                    ul.nav.navbar-nav
                        each item in knowledges
                            li.dropdown
                                a(href="##",data-toggle="dropdown",class="dropdown-toggle") #{item.name}
                                   span.caret
                                ul.dropdown-menu
                                    each tab in item.flowersName
                                       li: a.text-center.fs14(data-id="#{tab.id}",href="##{tab.id}") #{tab.title}
            .col-md-9.pl25
                each item in flowers
                    .knowledge-item.d-n(data-id="#{item._id}")
                        h2.text-center #{item.title}
                        p.fs14.c-9.text-center #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                        hr
                        .news-content.fs18 #{item.conservation}
                hr
                .pb10.tit-click
                    .pull-left
                        span 上一篇：&nbsp;&nbsp;
                        a(href="javascript:void(0);") 微林上线啦
                    .pull-right
                        span 下一篇：&nbsp;&nbsp;
                        a(href="javascript:void(0);") 微林上线啦
    script(src="/js/knowledge.js")