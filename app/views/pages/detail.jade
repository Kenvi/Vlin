extends ../layout

block content
    .detail.container.mt40.pb50
        .J_Poster.poster-main(data-setting='{"width":1170,"height":653,"posterWidth":980,"posterHeight":653,"scale":0.8,"autoPlay":true,"delay":2000,"speed":300}')
            .poster-btn.poster-prev-btn.glyphicon.glyphicon-chevron-left
            ul.poster-list
                each poster in flower.poster
                    li.poster-item
                        img(src="/upload/#{poster}", width="100%", align="center")
            .poster-btn.poster-next-btn.glyphicon.glyphicon-chevron-right
        .detail-text.fs-2.mt40
            .row.mt20.pb20
                .col-md-4.b-r.pt20
                    dl.dl-horizontal
                        dt.c-green
                          span.glyphicon.glyphicon-leaf
                          span 产品名称
                        dd #{flower.title}
                .col-md-4.b-r.pt20
                    dl.dl-horizontal
                        dt.c-green
                            span.glyphicon.glyphicon-leaf
                            span 价格
                        dd.c-red ¥#{flower.price}
                .col-md-4.pt20
                    dl.dl-horizontal
                        dt.c-green
                            span.glyphicon.glyphicon-leaf
                            span 应用场景
                        dd #{flower.scenarios}
            .row.mt20.pl15.pr50
                dl.dl-horizontal
                    dt.c-green
                        span.glyphicon.glyphicon-leaf
                        span 地理分布
                    dd #{flower.location}
            .row.mt20.pl15.pr50
                dl.dl-horizontal
                    dt.c-green
                        span.glyphicon.glyphicon-leaf
                        span 植物文化
                    dd #{flower.culture}
            .row.mt40.pl15.pr50
                dl.dl-horizontal
                    dt.c-green
                        span.glyphicon.glyphicon-leaf
                        span 养护方式
                    dd #{flower.conservation}

    script(src="/js/detail.js")