extends ../layout

block content
   img(src="/images/about-us-bannerbg.jpg",align="center",width="100%",style="min-width:1170px")
   .container.mt100.pb100
      .row
         .col-md-3.fs18.text-center
            .navbar.navbar-success(role="navigation")
               h3.bg-green.c-f.fs18 新闻列表
               ul.nav.navbar-nav
                  each item in news
                     li
                        a(href="javascript:void(0);") #{item.title}
         .col-md-9.pl25
            each item in news
               .news-item.d-n
                  h2.text-center #{item.title}
                  p.fs14.c-9.text-center #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                  hr
                  each con in item.content
                     .news-content.fs18 #{con}
            hr
            .pb10.tit-click
               .pull-left
                  span 上一篇：&nbsp;&nbsp;
                  a(href="javascript:void(0);") 当前为第一篇
               .pull-right
                  span 下一篇：&nbsp;&nbsp;
                  a(href="javascript:void(0);") --
   script(src="/js/news.js")